<Window x:Class="Administration.Dialogs.AddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Administration.Dialogs"
        mc:Ignorable="d"
        Title="Группа" Height="120" Width="300" MinHeight="120" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Название: " VerticalAlignment="Center" FontSize="18" FontWeight="Bold" FontStyle="Italic" Margin="10,0,0,0" />
        <TextBox x:Name="Name" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="18"/>
        <Button Grid.Row="1" Grid.ColumnSpan="2" Content="Сохранить" Click="Button_Click" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
    </Grid>
</Window>
